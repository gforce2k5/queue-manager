<% include ../partials/header %>

<div class="container">
  <div class="row mb-5 mt-5">
    <div class="col-sm-4">
      <div class="statcard statcard-primary p-4">
        <h3 class="statcard-number">
          <span id="waiting-customers"><%= customersWaiting %></span>
        </h3>
        <span class="statcard-desc">לקוחות שמחכים בתור</span>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="statcard statcard-success p-4">
        <h3 class="statcard-number">
          <span id="served-customers"><%= customersServed %></span>
        </h3>
        <span class="statcard-desc">לקוחות שטופלו</span>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="statcard statcard-info p-4">
        <h3 class="statcard-number">
          <span id="average-wait-time"><%= averageWaitTimeString %></span>
          <small class="delta-indicator" id="avg-diff"></small>
        </h3>
        <span class="statcard-desc">זמן המתנה ממוצע</span>
      </div>
    </div>    
  </div>
  <div class="row">
    <div class="col-12 col-lg-4">
      <canvas id="doughnut"></canvas>
    </div>
    <div class="col-12 col-lg-3">
      <canvas id="line"></canvas>
    </div>
  </div>
</div>

<input type="hidden" id="customers-wait-time" value="<%= customersWaitTime %>">
<input type="hidden" id="average-time" value="<%= averageWaitTime %>">

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.bundle.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/daily.js"></script>
<% include ../partials/footer %>